<div class="content">
   <div class="container-fluid">
      <div class="jumbotron" id="head-doc">
         <header>
            <h1>{{activity.activityname}} Activity</h1>
               <p id="editOption"><a  href="/activity/update/{{activity._id}}"><img src="../../public/images/Editing-edit-icon.png"></a> | <a href="/activity/delete/{{activity._id}}"><img src="../../public/images/delete.png"></a></p>
         </header>
         {{#if msg}}
            <p class="successMsg">{{msg}}</p>
         {{/if}}
         <div class="row">
            <div class="col-sm-9">
               <div class="view" id="description">
                  <h4>ABOUT</h4>
                  <p>{{activity.activityDescription}}</p>
               </div>
            </div>
            <div class="col-sm-3">
               <div class="view" id="activityTrainer">
                  <h4>TRAINER</h4>
                  <p>{{activity.activitytrainer}}</p>
               </div>
               <div class="view" id="membershipPlan">
                  <h4>MEMEBERSHIP PLAN</h4>
                  <p>{{activity.membershipplan}}</p>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>